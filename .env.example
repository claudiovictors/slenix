# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=Slenix
APP_KEY=
APP_DEBUG=true
APP_ENV=production                 # local  production  testing
APP_PATH=/
APP_VERSION=2.2
APP_HOSTNAME=localhost
APP_BASE_URL=http://localhost

# Timezone (https://www.php.net/manual/en/timezones.php)
APP_TIMEZONE=Africa/Luanda

# Locale
APP_LOCALE=pt_AO

# -----------------------------------------------------------------------------
# Database Configuration
# Configurações do banco de dados Mysql e PostgreSQL
# -----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOSTNAME=localhost
DB_PORT=3306
DB_NAME=slenix_db
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_general_ci  # Ignorar pro PG

# ---- Autenticação JWT --------------------------------------------------------
JWT_SECRET_TOKEN=coloque_aqui_a_sua_chave_secreta

# ---- E-mail ------------------------------------------------------------------
# Método de envio mail  smtp
EMAIL_METHOD=smtp

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_ENCRYPTION=tls               # tls  ssl  none
SMTP_AUTH=true
SMTP_TIMEOUT=30

# ---- Segurança HTTP ----------------------------------------------------------
FORCE_HTTPS=false
TRUSTED_PROXIES=
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'