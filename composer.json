{
    "name": "slenix/slenix",
    "description": "Slenix é um framework flexível rápido para construir APIs REST e aplicações web",
    "keywords": ["slenix", "framework"],
    "homepage": "https://github.com/claudiovictors/slenix",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Cláudio Victor",
            "email": "barrosclaudio147@gmail.com",
            "role": "Developer",
            "homepage": "https://github.com/claudiovictors"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Slenix\\": "src/"
        },
        "files": [
            "src/Supports/Helpers/Helpers.php"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"if (!file_exists('.env') && file_exists('.env.example')) { copy('.env.example', '.env'); echo 'INFO  .env file created successfully.'.PHP_EOL; }\"",
            "@php celestial key:generate --ansi"
        ],
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env') && file_exists('.env.example')) { copy('.env.example', '.env'); echo 'INFO  .env file created successfully.'.PHP_EOL; }\""
        ],
        "serve": "php celestial serve"
    },
    "config": {
        "sort-packages": true
    },
    "support": {
        "email": "barrosclaudio147@gmail.com",
        "issues": "https://github.com/claudiovictors/slenix/issues",
        "source": "https://github.com/claudiovictors/slenix"
    }

}
